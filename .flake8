[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg-info,
    .pytest_cache

# Ignore specific errors:
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)

per-file-ignores =
    scripts/*:E402,D202